{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "project": "./tsconfig.json",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "plugins": [
      { "transform": "ts-transformer-imports" }
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "src/components/Form/inputs/File.tsx",
    "src/components/Form/inputs/SmartJSON",
    "src/components/Form/inputs/DatePicker"
  ]
}
