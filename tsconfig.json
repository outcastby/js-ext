{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "project": "./tsconfig.json",
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
